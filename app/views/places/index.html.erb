<div class="container">

<h1>Listing Places</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= link_to place.name, place_path(place) %></td>
        <td><%= place.address %></td>
        
        <td><%= place.phone %></td>
        <td><%= place.website %></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user %>
<%= link_to 'New Place', new_place_path %>
<% end %>
</div>